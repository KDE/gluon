set(kalengine_LIB_SRCS
    kalengine.cpp
    kalphonon.cpp
    kalsoundloader.cpp
    kalsource.cpp
    kalbuffer.cpp
    kaloggstreamer.cpp
   )

kde4_add_library(kal SHARED ${kalengine_LIB_SRCS})
set_target_properties(kal PROPERTIES VERSION ${GENERIC_LIB_VERSION} SOVERSION 1)

target_link_libraries(kal 
                      ${KDE4_KDEUI_LIBS} ${KDE4_PHONON_LIBS} 
                      ${OPENAL_LIBRARY} ${ALUT_LIBRARY} 
                      ${SNDFILE_LIBRARY} ${OGG_LIBRARIES} ${VORBISFILE_LIBRARIES})

add_subdirectory(includes)

install(TARGETS kal ${INSTALL_TARGETS_DEFAULT_ARGS})

install(FILES
    kalbuffer.h
    kalengine.h
    kalengine_export.h
    kalphonon.h
    kalsoundloader.h
    kalsource.h
    kaloggstreamer.h
    DESTINATION ${INCLUDE_INSTALL_DIR}/gluon/kal COMPONENT Devel)
