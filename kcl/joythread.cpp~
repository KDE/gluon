#include "joythread.h"
#include <KDebug>

JoyThread::JoyThread(QObject * parent)
  :QThread(parent)
{
  m_fd = open("/dev/input/js0", O_RDONLY);

    if (m_fd < 0) 
        kDebug() << "No Joystick found... Cannot open " ;




}



       void JoyThread::run()
	{
int res = read(m_fd, &m_jsev, sizeof(struct js_event));
    if (!res) {
        kDebug() << "cannot read joystick input...";
    }
	
	kDebug()<<"something happen with joy";
	
	}