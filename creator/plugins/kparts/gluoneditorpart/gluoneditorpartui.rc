     http://www.kde.org/standards/kxmlgui/1.0/kxmlgui.xsd">

    <MenuBar>
        <Menu name="view" noMerge="1"><text>&amp;Edit</tex>
            <Action name="toggleSolidAction" group="renderingActions" />
            <Action name="toggleWireframeAction" group="renderingActions" />
            <Action name="togglePointsAction" group="renderingActions" />

            <Action name="toggleSelectAction" group="transformManipulatorActions" />
